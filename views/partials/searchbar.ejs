<script>
    function populatePincode() {
        var city = document.getElementById("cityname").value;
        var pincodeSelect = document.getElementById("pincode");

        // Reset pincode select
        pincodeSelect.innerHTML = '<option value="none" selected disabled hidden>Select Pincode</option>';

        // Enable pincode select
        pincodeSelect.disabled = false;

        // Populate pincode options based on selected city
        if (city === "Ahmedabad") {
            populateOptions(pincodeSelect, ["380058", "380059", "380060","200200", '201201', '300300', '500500', '380081', '380059']); // Example pincode options for Ahemdabad
        } else if (city === "Surat") {
            populateOptions(pincodeSelect, ["100201", "100202", "100203"]); // Example pincode options for Surat
        } else if (city === "Gandinagar") {
            populateOptions(pincodeSelect, ["400201", "400202", "400203"]); // Example pincode options for Surat
        } else if (city === "Himatnagar") {
            populateOptions(pincodeSelect, ["300101", "300102", "300103"]); // Example pincode options for Surat
        }
        // Add more conditions for other cities if needed
    }

    function populateOptions(selectElement, options) {
        options.forEach(function (option) {
            var optionElement = document.createElement("option");
            optionElement.value = option;
            optionElement.text = option;
            selectElement.appendChild(optionElement);
        });
    }
</script>