<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login and Register</title>
    <!-- links for css for this file -->
    <link rel="stylesheet" href="styles/logreg.css" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

    <!-- <script src="login.js"></script> -->
</head>

<body>

    <div class="backer">
        <a href="/" class="backerpointer">
            <i class="bx bxs-left-arrow"></i>
        </a>
    </div>

    <div class="img">
        <img src="/images/Logo.png" alt="Logo">
    </div>

    <div class="wrap">

        <span class="bg-ani"></span>
        <span class="bg-ani2"></span>

        <div class="form-box login">
            <h2 class="ani" style="--i:0; --j:21">Log-in</h2>
            <form action="/user/login" method="post">
                <div class="input-box ani" style="--i:1; --j:22">
                    <input type="email" name="email" required />
                    <label>Email-id</label>
                    <i class="bx bxs-user"></i>
                </div>

                <div class="input-box ani" style="--i:2; --j:23">
                    <input type="password" name="password" required />
                    <label>Password</label>
                    <i class="bx bxs-lock-alt"></i>
                </div>

                <button type="submit" class="btn ani" style="--i:3; --j:24">Login</button>

                <div class="logtoreg-link ani" style="--i:4; --j:25">
                    <p style="display: grid; grid-template-columns: 1fr 1fr; gap: 2px;">
                        Don't have an account?
                        <a class="register-link">Sign-up</a>
                        Forget Password?
                        <a href="/forgotpass">Click Here</a>
                    </p>
                </div>
            </form>
        </div>

        <div class="info-text login">
            <h2 class="ani" style="--i:0; --j:20">Welcome Back!</h2>
            <p class="ani" style="--i:1; --j:21">Thank you for choosing Helper's Hand for your service needs!</p>
        </div>



        <div class="form-box register">
            <h2 class="ani" style="--i:16; --j:0">Sign-Up</h2>
            <form action="/user/register" method="post">
                <div class="input-box ani" style="--i:17; --j:1">
                    <input type="text" name="username" required />
                    <label>Username</label>
                    <i class="bx bxs-user"></i>
                </div>

                <div class="input-box ani" style="--i:18; --j:2">
                    <input type="email" name="email" required />
                    <label>Email-id</label>
                    <i class="bx bxs-envelope"></i>
                </div>

                <div class="input-box ani" style="--i:19; --j:3">
                    <input type="password" name="password" required />
                    <label>Password</label>
                    <i class="bx bxs-lock-alt"></i>
                </div>

                <button type="submit" class="btn ani" style="--i:20; --j:4">Sign-In</button>

                <div class="logtoreg-link ani" style="--i:21; --j:5">
                    <p>
                        Already have an account?
                        <a class="login-link">Log-in</a>
                    </p>
                </div>
            </form>
        </div>

        <div class="info-text register">
            <h2 class="ani" style="--i:17; --j:0;">Welcome!</h2>
            <p class="ani" style="--i:18; --j:1;">Thank you for choosing Helper's Hand. We look forward to serving you!</p>
        </div>


    </div>  

    <script>
    const wrap = document.querySelector('.wrap');
    const registerlink = document.querySelector('.register-link');
    const loginlink = document.querySelector('.login-link');

    registerlink.onclick = (event) => {
        event.preventDefault(); // Prevent the default behavior of the anchor tag
        wrap.classList.add('active');
    }

    loginlink.onclick = (event) => {
        event.preventDefault(); // Prevent the default behavior of the anchor tag
        wrap.classList.remove('active');
    }
    </script>
    

</body>

</html>


