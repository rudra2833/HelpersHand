<%- include("partials/header.ejs") %>
<%- include("partials/searchbar.ejs") %>
    
<% if(!locals.db || locals.db.length === 0){ %>
    <h2>No Service Provider available in this criteria</h2>
<% } else { %>
    <div class="out1">
        <% for(var i=0; i<locals.db.length; i++){ %>
            <a href="#" class="in_out1" id="<%= locals.db[i].spid %>" onclick="redirectToDetails('<%= locals.db[i].spid %>')">
                <div class="io1_left">
                    <img src="<%= locals.db[i].avatar %>" alt="">
                </div>
                <div class="io1_right">
                    <span class="disp_name righti"> <%= locals.db[i].providername %> </span>
                    <span class="disp_rate righti"> <%= (locals.db[0].rating===0)? "-" : (locals.db[0].rating) %>⭐ </span>
                    <span class="disp_cat righti"> <%= locals.db[i].category %> </span>
                    <span class="disp_price righti">₹  <%= locals.db[i].charges %> </span>
                    <span class="disp_area righti"> <%= locals.db[i].city %> </span>
                </div>
            </a>
        <% } %>
    </div>
<% } %>

<script>
    function redirectToDetails(id) {
        window.location.href = '/serviceprovider?id=' + id;
    }
</script>

<%- include("partials/footer.ejs") %>
